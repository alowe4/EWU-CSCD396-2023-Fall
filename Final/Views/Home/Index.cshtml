@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    

    <h3>Received Messages:</h3>
    <ul>
        @foreach (var message in Model)
        {
            <li>@message</li>
        }
    </ul>

    <form method="post" asp-action="ReceiveMessage" asp-controller="Home">
        <button type="submit">Retrieve Message</button>
    </form>
    <form method="post" asp-action="ClearMessages" asp-controller="Home">
        <button type="submit">Clear Messages</button>
    </form>
</div>
